<style>
    footer {
        
        height: 250px;
        background: linear-gradient(to bottom, transparent, var(--color-bg-noche));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        align-content: space-around;
    }

    .footer-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding-right: 2rem;
        border-right: 2px solid white;
    }
    .footer-title span { font-size: 3.5rem; }

    .footer-social-media-row {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        margin-bottom: 1rem;
    }

    .social-media-row-item {
        width: 100%;
        display: flex;
        align-items: center;
    }

    .social-media-row-item span {
        font-size: 2rem;
    }

    .social-media-row-item a {
        color: var(--color-text-secondary);
        text-decoration: none;
        font-size: 1.2rem;
        height: fit-content;
    }

    /* Media Queries para Responsividad */

    /* Tablets (max-width: 768px) */
    @media (max-width: 768px) {
        footer {
            height: auto;
            padding: 2rem 1rem;
        }

        .footer-title {
            font-size: 1.5rem;
            padding-right: 1.5rem;
        }

        .footer-title span {
            font-size: 2.5rem;
        }

        .footer-social-media-row {
            gap: 1.5rem;
        }

        .social-media-row-item span {
            font-size: 1.5rem;
        }
    }

    /* Móviles (max-width: 480px) */
    @media (max-width: 480px) {
        footer {
            height: auto;
            padding: 1.5rem 0.5rem;
        }

        .footer-title {
            font-size: 1rem;
            padding-right: 0.75rem;
            border-right: 1px solid white;
        }

        .footer-title span {
            font-size: 1.5rem;
        }

        .footer-social-media-row {
            flex-wrap: nowrap;
            gap: 0.5rem;
            justify-content: center;
            align-items: center;
        }

        .social-media-row-item span {
            font-size: 1.25rem;
        }

        footer p {
            font-size: 0.75rem;
            text-align: center;
        }

        footer hr {
            margin-block: 0.75rem;
        }
    }
</style>