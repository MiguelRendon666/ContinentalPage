---
import FooterLayout from "./FooterLayout.astro";
import HeaderLayout from "./HeaderLayout.astro";
import DynamicBackground from "./objects/DynamicBackground.astro";

const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
        <slot name="head" />
		<title>{title}</title>
        <link rel="stylesheet" href="/css/app.css" />
        <link rel="stylesheet" href="/assets/icons/style.css" />
	</head>
    <HeaderLayout title={title}>
        <slot name="header-slot" slot="header-slot"></slot>
    </HeaderLayout>

	<body>
		<DynamicBackground >
			<slot name="dynamic-background-slot" />
		</DynamicBackground>
		<main>
            <slot />
        </main>
	</body>

    <FooterLayout />
</html>